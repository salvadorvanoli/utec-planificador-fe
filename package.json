    "@angular/platform-browser": "^20.2.0",
    "@angular/router": "^20.2.0",
    "@primeuix/themes": "^1.2.4",
    "@tailwindcss/postcss": "^4.1.4",
    "chart.js": "^4.4.8",
    "html2pdf.js": "^0.12.1",
    "marked": "^17.0.0",
    "postcss": "^8.5.3",
    "primeicons": "^7.0.0",
    "primeng": "^20.2.0",
